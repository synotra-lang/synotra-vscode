{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Synotra",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.synotra",
					"match": "\\b(class|actor|io|fun|var|if|else|for|while|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.synotra",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.synotra",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.synotra",
					"begin": "//",
					"end": "$\\n?"
				},
				{
					"name": "comment.block.synotra",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.synotra",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		}
	},
	"scopeName": "source.synotra"
}
